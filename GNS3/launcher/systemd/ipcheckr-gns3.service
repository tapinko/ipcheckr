[Unit]
Description=IPCheckr GNS3 launcher service
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/ipcheckr-gns3-connector
User=root
Group=root

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ReadWritePaths=/var/lib/gns3
ProtectHome=true
ProtectControlGroups=true
ProtectKernelTunables=true
ProtectKernelModules=true
LockPersonality=true
MemoryDenyWriteExecute=true
RestrictSUIDSGID=true

[Install]
WantedBy=multi-user.target